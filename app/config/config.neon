			errorPresenter: Error

		container:
			debugger: true

		session:
			expiration: 14 days

		database:
			default:
				dsn: 'mysql:host=localhost;dbname=ladenka'
				user: root
				password:


	services:
		authenticator: Authenticator
		database: @nette.database.default
		cssLoader: WebLoader\Nette\CssLoader::createLoader("%wwwDir%/css", "%wwwDir%/temp", "temp", [ "screen.css", "%appDir%/../libs/juzna/nette-visual-paginator/example.css" ])

	factories:


production < common:

